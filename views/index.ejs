<%- include('partials/header') %>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>home</title>
  </head>
  <body>
    <div class="container2">
      <div class="posts">
        <% if (locals.posts && posts.length > 0) { %>
          <ul>
            <% for (let i = 0; i < posts.length; i++) { %>
              <li>
                <a href="/posts/<%= posts[i].id %>"><%= posts[i].title %></a>
              </li>
            <% } %>
          </ul>
        <% } else { %>
          <p class="no">No posts yet. Create your first post!</p>
        <% } %>
      </div>
    </div>
  </body>
</html>
